@model UserDetail
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Login</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->
<!--== Login Page Content Start ==-->
<section id="lgoin-page-wrap" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-8 m-auto">
                <div class="login-page-content">
                    <div class="login-form">
                        <h3>Sign Up</h3>
                        @using (Html.BeginForm("SignUp", "Users", new { area = "" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="name">
                                <div class="row">
                                    <div class="col-md-6">
                                        @Html.TextBox((nameof(Model.FirstName)), "", new { placeholder = "*FirstName" })
                                    </div>
                                    <div class="col-md-6">
                                        @Html.TextBox((nameof(Model.LastName)), "", new { placeholder = "*LastName" })
                                    </div>
                                </div>
                            </div>
                            <div class="username">
                                @Html.TextBox((nameof(Model.Email)), "", new { placeholder = "*Email" })
                            </div>
                            <div class="username">
                                @Html.TextBox((nameof(Model.UserName)), "", new { placeholder = "*Username" })
                            </div>

                            <div class="password">
                                @Html.TextBox((nameof(Model.Password)), "", new { placeholder = "*Password" })
                            </div>

                            <div class="log-btn">
                                <button type="submit"><i class="fa fa-check-square"></i> Sign Up</button>
                            </div>
                        }

                    </div>

                    <div class="create-ac">
                        <p>Have an account? <a href="login.html">Sign In</a></p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!--== Login Page Content End ==-->
