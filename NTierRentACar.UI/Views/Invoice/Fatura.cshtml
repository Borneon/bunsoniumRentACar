@model InvoiceVM
@{
    ViewBag.Title = "Fatura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay" style="background-image: url('../../Content/assets/img/pricing-bg.jpg');">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Invoice</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->

<section class="content invoice container">
    <!-- title row -->
    <div class="row">
        <div class="col-xs-12 invoice-header">
            <h1>
                <i class="fa fa-globe"></i> Invoice.
                <small class="pull-right">Date: @DateTime.Now</small> @*Fatura tarihi burada*@
            </h1>
        </div>
        <!-- /.col -->
    </div>
    <!-- info row -->
    <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
            From
            <address>
                <strong>Bunsonium Car Rental</strong>
                <br>795 Freedom Ave, Suite 600
                <br>Montreal, CANADA 94107
                <br>Phone: 1 (804) 123-9876
                <br>Email: info@bunsonium.com
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            To
            <address>
                <strong>@Model.Kiralayan.FirstName @Model.Kiralayan.LastName</strong> @*Kullaniciya ait bilgiler burada*@
                @*<br>795 Freedom Ave, Suite 600
                <br>New York, CA 94107*@              
                <br>Email: @Model.Kiralayan.Email
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            <b>Invoice @Model.FaturaInfo</b> @*Fatura id'si gösterilecek*@
            <br>
            <br>
            <b>Rent ID:</b> @Model.Kiralama.Id @*Kiralama id'si gösterilecek*@
            <br>
            <b>Payment Due:</b> @DateTime.Now
            @*Ödeme tarihi, fatura tarihi olarak alınacak*@


        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- Table row -->
    <div class="row">
        <div class="col-xs-12 table">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Car</th>
                        <th>Total Renting Date</th>
                        <th>Cost</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.AracAdi</td> @*Arac adı*@
                        <td>@Model.KiralananGun</td> @*Kaç gün kiraladığı*@
                        <td>$@Model.Ucret</td> @*Ücret*@
                    </tr>

                </tbody>
            </table>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- this row will not appear when printing -->
    <div class="row no-print">
        <div class="col-xs-12">
            <button class="btn btn-default" onclick="window.print();"><i class="fa fa-print"></i> Print</button>
            <button class="btn btn-success pull-right"><i class="fa fa-credit-card"></i> Submit Payment</button>
        </div>
    </div>
</section>

