
@{
    ViewBag.Title = "Renting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay" style="background-image: url('../../Content/assets/img/pricing-bg.jpg');">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Rent a Car</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p></p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->
<!--== Pricing Area Start ==-->
<section id="pricing-page-area" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Pricing Content Start -->
            <div class="login-form col-lg-8">
                <div class="container login-form" style="overflow:auto;">
                    <h1>Choose Your Destination</h1>
                    <br />
                    @using (Html.BeginForm("Renting", "Main", new { area = "" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="password">
                            <select name="PickUpPlace" class="col-md-6 custom-select" style="background-color:transparent;border-color:black;">
                                <option selected>Pick Location</option>
                                <option value="Montreal">Montreal</option>
                                <option value="Toronto">Toronto</option>
                                <option value="Vancouver">Vancouver</option>
                                <option value="Ottawa">Ottawa</option>
                            </select>
                        </div>
                        <br />
                        <div class="password">
                            <select name="DropPlace" class="col-md-6 custom-select" style="background-color:transparent;border-color:black;">
                                <option selected>Drop Location</option>
                                <option value="Montreal">Montreal</option>
                                <option value="Toronto">Toronto</option>
                                <option value="Vancouver">Vancouver</option>
                                <option value="Ottowa">Ottowa</option>
                            </select>
                        </div>
                        <div class="password">
                            <div>
                                <input type="date" name="StartDate" placeholder="Pick Date" />
                            </div>
                        </div>
                        <div class="password">
                            <div>
                                <input type="date" name="EndDate" placeholder="Return Date" />
                            </div>
                        </div>
                        <div class="password">
                            <select name="CarID" class="col-md-6 custom-select" style="background-color:transparent;border-color:black;">
                                <option selected>Choose Car</option>
                                @foreach (var item in ViewBag.Araclar)
                                {
                                    <option value="@item.Id">@item.CModel</option>
                                }
                            </select>
                        </div>
                        <div class="log-btn">
                            <button type="submit"><i class="fa fa-car"></i> Rent!</button>
                        </div>
                    }
                </div>

            </div>
            <!-- Pricing Content End -->
            <!-- Sidebar Area Start -->
            <div class="col-lg-4">
                <div class="sidebar-content-wrap m-t-50">

                    <!-- Single Sidebar Start -->
                    <div class="single-sidebar">
                        <h3>Our Cars</h3>
                        <div class="sidebar-body" style="overflow-y:scroll;height:500px;">
                            <ul class="recent-tips">
                                @foreach (var item in ViewBag.Araclar)
                                {
                                    <li class="single-recent-tips">
                                        <div class="recent-tip-thum">
                                            <a><img src="@item.ImageUrl" alt="JSOFT"></a>
                                        </div>
                                        <div class="recent-tip-body">
                                            <h4><a>@item.CModel</a></h4>
                                            <span class="date">February 5, 2018</span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <!-- Single Sidebar End -->
                    <!-- Single Sidebar Start -->
                    <!-- Single Sidebar End -->
