@model List<Car>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay" style="background-image: url('../../Content/assets/img/pricing-bg.jpg');">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Pick a Car</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->
<!--== Car List Area Start ==-->
<section id="car-list-area" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Car List Content Start -->
            <div class="col-lg-12">
                <div class="car-list-content">
                    <div class="row">
                        <!-- Single Car Start -->
                        @foreach (Car item in Model)
                        {
                            <div class="col-lg-6 col-md-6">
                                <div class="single-car-wrap">
                                    <div class="car-list-thumb" style="background-image:url(@item.ImageUrl)"></div>
                                    <div class="car-list-info without-bar">
                                        <h2>@item.CModel</h2> @*aracın isim alanı*@
                                        <h5>@item.CostPerDay $ Rent /per a day</h5>                                       
                                        <ul class="car-info-list">
                                            <li>@item.Gearbox</li>
                                            <li>@item.FuelType</li>
                                            <li>@item.PersonCapacity</li>
                                        </ul>
                                        <p class="rating">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star unmark"></i>
                                        </p>
                                        @*<a href="@Url.Action("Renting","Main",new {area="",id=item.Id})" class="rent-btn">Rent It</a>*@
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- Single Car End -->
                    </div>
                </div>                
            </div>
            <!-- Car List Content End -->
        </div>
    </div>
</section>
<!--== Car List Area End ==-->
