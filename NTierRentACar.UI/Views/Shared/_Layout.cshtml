
<!DOCTYPE html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--=== Favicon ===-->
    <link rel="shortcut icon" href="~/Content/assets/favicon.ico" type="image/x-icon" />

    <title>Bunsonium - Car Rental</title>

    <!--=== Bootstrap CSS ===-->
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <!--=== Vegas Min CSS ===-->
    <link href="~/Content/assets/css/plugins/vegas.min.css" rel="stylesheet">
    <!--=== Slicknav CSS ===-->
    <link href="~/Content/assets/css/plugins/slicknav.min.css" rel="stylesheet">
    <!--=== Magnific Popup CSS ===-->
    <link href="~/Content/assets/css/plugins/magnific-popup.css" rel="stylesheet">
    <!--=== Owl Carousel CSS ===-->
    <link href="~/Content/assets/css/plugins/owl.carousel.min.css" rel="stylesheet">
    <!--=== Gijgo CSS ===-->
    <link href="~/Content/assets/css/plugins/gijgo.css" rel="stylesheet">
    <!--=== FontAwesome CSS ===-->
    <link href="~/Content/assets/css/font-awesome.css" rel="stylesheet">
    <!--=== Theme Reset CSS ===-->
    <link href="~/Content/assets/css/reset.css" rel="stylesheet">
    <!--=== Main Style CSS ===-->
    <link href="~/Content/assets/style.css" rel="stylesheet">
    <!--=== Responsive CSS ===-->
    <link href="~/Content/assets/css/responsive.css" rel="stylesheet">


    <!--[if lt IE 9]>
        <script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="loader-active">

    <!--== Preloader Area Start ==-->
    <div class="preloader">
        <div class="preloader-spinner">
            <div class="loader-content">
                <img src="~/Content/assets/img/preloader.gif" alt="JSOFT">
            </div>
        </div>
    </div>
    <!--== Preloader Area End ==-->
    <!--== Header Area Start ==-->
    <header id="header-area" class="fixed-top">

        

        <!--== Header Start ==-->
        <div id="header-bottom">
            <div class="container">
                <div class="row">
                    <!--== Logo Start ==-->
                    <div class="col-lg-4">
                        <a href="@Url.Action("HomePage","Main",new { area=""})" class="logo">
                            <img src="~/Content/assets/img/logo1.png" alt="JSOFT">
                        </a>
                    </div>
                    <!--== Logo End ==-->
                    <!--== Main Menu Start ==-->
                    <div class="col-lg-8 d-none d-xl-block">
                        <nav class="mainmenu alignright">
                            <ul>

                                <li><a href="@Url.Action("HomePage","Main",new { area=""})">Home</a></li>
                                <li><a href="@Url.Action("List","Cars",new { area=""})">Cars</a></li>
                                <li><a href="@Url.Action("Add","Contact",new { area=""})">Contact</a></li>
                                @if (string.IsNullOrEmpty(HttpContext.Current.User.Identity.Name))
                                {
                                    <li><a href="@Url.Action("Login","Main",new { area=""})">Login</a></li>
                                    <li><a href="@Url.Action("SignUp","Users",new { area=""})">Signup</a></li>
                                }
                                else
                                {
                                    <li><a href="#"><i class="icon fa fa-user"></i>Merhaba @HttpContext.Current.User.Identity.Name</a></li>
                                    <li><a href="@Url.Action("Logout","Main",new { area=""})"><i class="icon fa fa-lock"></i>Logout</a></li>
                                }
                            </ul>

                        </nav>
                    </div>
                    <!--== Main Menu End ==-->
                </div>
            </div>
        </div>
        <!--== Header Bottom End ==-->
    </header>
    <!--== Header Area End ==-->
    @RenderBody();
    <!--== Footer Area Start ==-->
    <section id="footer-area">
        <!-- Footer Widget Start -->
        <div class="footer-widget-area">
            <div class="container">
                <div class="row">
                    <!-- Single Footer Widget Start -->
                    <div class="col-lg-4 col-md-6">
                        <div class="single-footer-widget">
                            <h2>About Us</h2>
                            <div class="widget-body">
                                <img src="~/Content/assets/img/logo1.png" alt="footerlogo">
                                <p>Bunsonium is Canada's most trusted car rental brand. The brand, which was established with domestic capital and continued on its way; has become one of the leading players in the car rental sector with its expert and passionate staff, corporate structure and goals</p>

                            </div>
                        </div>
                    </div>
                    <!-- Single Footer Widget End -->
                    <!-- Single Footer Widget Start -->
                    <div class="col-lg-4 col-md-6">
                        <div class="single-footer-widget">
                            <h2>get touch</h2>
                            <div class="widget-body">
                                <p>
                                    Contact us, Now!
                                </p>

                                <ul class="get-touch">
                                    <li><i class="fa fa-map-marker"></i>  Montreal, Canada</li>                                    
                                    <li><i class="fa fa-envelope"></i> bunsonium@gmail.com</li>
                                </ul>                               
                            </div>
                        </div>
                    </div>
                    <!-- Single Footer Widget End -->
                </div>
            </div>
        </div>
        <!-- Footer Widget End -->
        
    </section>
    <!--== Footer Area End ==-->
    <!--== Scroll Top Area Start ==-->
    <div class="scroll-top">
        <img src="~/Content/assets/img/scroll-top.png" alt="JSOFT">
    </div>
    <!--== Scroll Top Area End ==-->
    <!--=======================Javascript============================-->
    <!--=== Jquery Min Js ===-->

    <script src="~/Scripts/jsMain/jquery-3.2.1.min.js"></script>
    <!--=== Jquery Migrate Min Js ===-->
    <script src="~/Scripts/jsMain/jquery-migrate.min.js"></script>
    <!--=== Popper Min Js ===-->
    <script src="~/Scripts/jsMain/popper.min.js"></script>
    <!--=== Bootstrap Min Js ===-->
    <script src="~/Scripts/jsMain/bootstrap.min.js"></script>

    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <!--=== Gijgo Min Js ===-->
    <script src="~/Scripts/jsMain/plugins/gijgo.js"></script>
    <!--=== Vegas Min Js ===-->
    <script src="~/Scripts/jsMain/plugins/vegas.min.js"></script>
    <!--=== Isotope Min Js ===-->
    <script src="~/Scripts/jsMain/plugins/isotope.min.js"></script>
    <!--=== Owl Caousel Min Js ===-->
    <script src="~/Scripts/jsMain/plugins/owl.carousel.min.js"></script>
    <!--=== Waypoint Min Js ===-->
    <script src="~/Scripts/jsMain/plugins/waypoints.min.js"></script>
    <!--=== CounTotop Min Js ===-->
    <script src="~/Scripts/jsMain/plugins/counterup.min.js"></script>
    <!--=== YtPlayer Min Js ===-->
    <script src="~/Scripts/jsMain/plugins/mb.YTPlayer.js"></script>
    <!--=== Magnific Popup Min Js ===-->
    <script src="~/Scripts/jsMain/plugins/magnific-popup.min.js"></script>
    <!--=== Slicknav Min Js ===-->
    <script src="~/Scripts/jsMain/plugins/slicknav.min.js"></script>
    <!--=== Main Js ===-->
    <script src="~/Scripts/jsMain/main.js"></script>
    @RenderSection("scripts", false);

</body>
</html>
