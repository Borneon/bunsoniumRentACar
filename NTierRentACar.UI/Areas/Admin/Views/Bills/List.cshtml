@model List<Bill>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
}


<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Liste ve Düzenlemeler</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a href="@Url.Action("Add","Rents",new {area="Admin"})" role="button" aria-expanded="false"><i class="fa fa-wrench"></i> Ekle</a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <table id="datatable-fixed-header" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Invoice ID </th>
                        <th>Invoice Date </th>    
                        <th>User Invoice ID</th>
                        <th>Payment </th>
                        <th>Created Date</th>
                        <th>Update Date</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (Bill item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Date</td>                            
                            <td>@item.UserID</td>
                            <td class="a-right a-right ">$@item.Cost</td>
                            <td>@item.CreatedDate</td>
                            <td>@item.ModifiedDate</td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
