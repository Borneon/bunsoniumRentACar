@model List<Car>
@{
    ViewBag.Title = "Araç Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
}

@if (TempData["CarMsg"] != null)
{
    <div class="alert alert-success">
        @TempData["CarMsg"]
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </div>
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Liste ve Düzenlemeler</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a href="@Url.Action("Add","Car",new {area="Admin"})" role="button" aria-expanded="false"><i class="fa fa-wrench"></i> Ekle</a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <table id="datatable-fixed-header" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Car Name</th>
                        <th>Brand</th>
                        <th>Daily Price</th>
                        <th>Person Capacity</th>
                        <th>Baggage Capacity</th>
                        <th>Age Limit</th>
                        <th>Gearbox</th>
                        <th>Fuel</th>                       
                        <th>Picture</th>
                        <th>Added Date</th>
                        <th>Update Date</th>
                        <th colspan="2">Update/Delete</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Car item in Model)
                    {
                    <tr>
                        <td>@item.CModel</td>
                        <td>@item.CarBrandID</td>
                        <td>@item.CostPerDay</td>
                        <td>@item.PersonCapacity</td>
                        <td>@item.BaggageCapacity</td>
                        <td>@item.MinRentAge</td>
                        <td>@item.Gearbox</td>
                        <td>@item.FuelType</td>                        
                        <td>@item.ImageUrl</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedDate</td>
                        <td>
                            @*<a class="btn btn-app" href="@Url.Action("Update","Car",new { area="Admin",id=item.Id })"><i class="fa fa-edit"></i>Güncelle</a>*@
                            <a class="btn btn-app" href="/Admin/Car/Update/@item.Id"><i class="fa fa-edit"></i>Update</a>
                            <a class="btn btn-app" href="@Url.Action("Delete","Car",new { area="Admin",id=item.Id })"><i class="fa fa-trash"></i>Delete</a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>





