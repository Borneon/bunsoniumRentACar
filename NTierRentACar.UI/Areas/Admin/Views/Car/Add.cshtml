@model CarVM
@{
    ViewBag.Title = "Araç Ekleme Paneli";
    Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
}


@if (TempData["CarErr"] != null)
{
    <div class="alert alert-danger">
        @TempData["CarErr"]
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </div>
}


@using (Html.BeginForm("Add", "Car", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal form-label-left">
        <div class="item form-group">
            @Html.LabelFor(x => x.araba.CModel, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBox((nameof(Model.araba.CModel)))
            </div>
        </div>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">Car Brand</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <select name="CarBrandID">
                    @foreach (var item in Model.aracmarka)
                    {
                        <option value="@item.Id">@item.BrandName</option>
                    }
                </select>
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(x => x.araba.CostPerDay, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBox((nameof(Model.araba.CostPerDay)))
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(x => x.araba.PersonCapacity, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBox((nameof(Model.araba.PersonCapacity)))
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(x => x.araba.BaggageCapacity, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBox((nameof(Model.araba.BaggageCapacity)))
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(x => x.araba.FuelType, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBox((nameof(Model.araba.FuelType)))
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(x => x.araba.MinRentAge, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBox((nameof(Model.araba.MinRentAge)))
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(x => x.araba.Gearbox, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBox((nameof(Model.araba.Gearbox)))
            </div>
        </div>
              
        <div class="form-group">
            <label>Fotoğraf</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input type="file" name="Image" />
            </div>
        </div>

        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <button type="button" class="btn btn-primary" onclick="window.location='/Admin/Car/List';return false;">Cancel</button>
                <button id="send" type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
    
}