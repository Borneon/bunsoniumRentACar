@model CarVM
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
}

<form action="/Admin/Car/Update" method="post">
    <div class="form-horizontal form-label-left">
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">Araç Modeli</label>            
            <input type="text" name="CModel" value="@Model.araba.CModel" class="col-md-6 col-sm-6 col-xs-12" />
            
        </div>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">Car Brand</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <select name="CarBrandID">
                    @foreach (var item in Model.aracmarka)
                    {
                        <option @if (Model.araba.CarBrandID == item.Id) { @Html.Raw("selected") } value="@item.Id">@item.BrandName</option>
                    }
                </select>
            </div>
        </div>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">CostPerDay</label>
            <input type="text" name="CostPerDay" value="@Model.araba.CostPerDay" class="col-md-6 col-sm-6 col-xs-12" />
        </div>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">PersonCapacity</label>
            <input type="text" name="PersonCapacity" value="@Model.araba.PersonCapacity" class="col-md-6 col-sm-6 col-xs-12" />
        </div>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">BaggageCapacity</label>
            <input type="text" name="BaggageCapacity" value="@Model.araba.BaggageCapacity" class="col-md-6 col-sm-6 col-xs-12" />
        </div>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">MinRentAge</label>
            <input type="text" name="MinRentAge" value="@Model.araba.MinRentAge" class="col-md-6 col-sm-6 col-xs-12" />
        </div>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">FuelType</label>
            <input type="text" name="FuelType" value="@Model.araba.FuelType" class="col-md-6 col-sm-6 col-xs-12" />
        </div>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">Gearbox</label>
            <input type="text" name="Gearbox" value="@Model.araba.Gearbox" class="col-md-6 col-sm-6 col-xs-12" />
        </div>
              
        <div class="form-group">
            <label>Fotoğraf</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input type="file" name="Image" />
            </div>
        </div>
        <input type="hidden" value="@Model.araba.Id" name="Id" />
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <button type="button" class="btn btn-primary" onclick="window.location='/Admin/Car/List';return false;">Cancel</button>
                <button id="send" type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>

    </div>
</form>

