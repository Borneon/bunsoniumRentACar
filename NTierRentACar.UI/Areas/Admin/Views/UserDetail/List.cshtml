@model List<UserDetail>
@{
    ViewBag.Title = "Kullanıcıları Listele";
    Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
}

@if (TempData["UserMsg"] != null)
{
    <div class="alert alert-success">
        @TempData["UserMsg"]
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </div>
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">            
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a href="@Url.Action("Add","UserDetail",new {area="Admin"})" role="button" aria-expanded="false"><i class="fa fa-wrench"></i>Ekle</a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <table id="datatable-fixed-header" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>UserName</th>
                        <th>Password</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Created Date</th>
                        <th>Modified Date</th>
                        <th colspan="1">Güncelle/Sil</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (UserDetail item in Model)
                    {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.UserName</td>
                        <td>@item.Password</td>
                        <td>@item.Email</td>
                        <td>@item.Role</td>                        
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedDate</td>
                        <td>
                            <a class="btn btn-app" href="@Url.Action("Update","UserDetail",new { area="Admin",id=item.Id })"><i class="fa fa-edit"></i>Güncelle</a>
                            <a class="btn btn-app" href="@Url.Action("Delete","UserDetail",new { area="Admin",id=item.Id })"><i class="fa fa-trash"></i>Sil</a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


