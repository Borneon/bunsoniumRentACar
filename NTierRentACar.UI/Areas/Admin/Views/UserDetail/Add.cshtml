@model UserDetail
@{
    ViewBag.Title = "Kullanıcı Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
}

@if (TempData["UserErr"] != null)
{
    <div class="alert alert-danger">
        @TempData["UserErr"]
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </div>
}


@using (Html.BeginForm("Add", "UserDetail", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal form-label-left">
        <div class="item form-group">
            @Html.LabelFor(x => x.FirstName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBox((nameof(Model.FirstName)))
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(x => x.LastName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBox((nameof(Model.LastName)))
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(x => x.UserName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBox((nameof(Model.UserName)))
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(x => x.Password, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBox((nameof(Model.Password)))
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(x => x.Email, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBox((nameof(Model.Email)))
            </div>
        </div>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">Role</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <select name="Role">
                    @foreach (var item in ViewBag.Roller)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>
        </div>

        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <button type="button" class="btn btn-primary" onclick="window.location='/Admin/UserDetail/List';return false;">Cancel</button>
                <button id="send" type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>

    </div>
}

