@model List<CarBrand>
    @{
        ViewBag.Title = "Araç Markaları";
        Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
    }

    @if (TempData["BrandMsg"] != null)
    {
        <div class="alert alert-success">
            @TempData["BrandMsg"]
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        </div>
    }

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Liste ve Düzenlemeler</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li> 
                    <li>
                        <a href="@Url.Action("Add","CarBrand",new {area="Admin"})"  role="button" aria-expanded="false"><i class="fa fa-wrench"></i>Ekle</a>
                    </li>                 
                </ul>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">               
                <table id="datatable-fixed-header" class="table table-striped table-bordered">
                    <thead>
                        <tr>                            
                            <th>Marka</th>
                            <th>Açıklaması</th>
                            <th>Eklenme Tarihi</th>
                            <th>Güncelleme Tarihi</th>
                            <th colspan="1">Güncelle/Sil</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach(CarBrand item in Model)
                        {
                            <tr>
                                <td>@item.BrandName</td>
                                <td>@item.Description</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.ModifiedDate</td>
                                <td>                                    
                                    <a class="btn btn-app" href="@Url.Action("Update","CarBrand",new { area="Admin",id=item.Id })"><i class="fa fa-edit"></i>Güncelle</a>
                                    <a class="btn btn-app" href="@Url.Action("Delete","CarBrand",new { area="Admin",id=item.Id })"><i class="fa fa-trash"></i>Sil</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

